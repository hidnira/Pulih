                  <VBox>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tanggal Pemberian Tugas">
                           <font>
                              <Font name="SFUIText-Regular" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Text>
                        <DatePicker fx:id="tanggalTugasPicker" prefHeight="25.0" prefWidth="198.0" promptText="Tanggal Penugasan" />
                     </children>
                     <HBox.margin>
                        <Insets left="60.0" />
                     </HBox.margin>
                  </VBox>
